    "lib": [
      "esnext",
      "dom"
    ],
    "module": "commonjs",
    "target": "es2019",
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "outDir": "build",
    "experimentalDecorators": true,
    "types": [
      "@types/express-serve-static-core",
      "jest"
